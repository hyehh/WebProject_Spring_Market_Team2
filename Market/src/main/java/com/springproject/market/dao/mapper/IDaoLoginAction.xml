<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="com.springproject.market.dao.IDaoLoginAction">
		<select id="customerLoginAction" resultType="com.springproject.market.dto.BDtoLogin">
			SELECT CID, CPW FROM CUSTOMER WHERE CID= #{param1} AND CPW= #{param2}
		</select>
		
		<select id="sellerLoginAction" resultType="com.springproject.market.dto.BDtoLogin">
			SELECT SID, SPW FROM SELLER WHERE SID= #{param1} AND SPW= #{param2}
		</select>
	</mapper>
	